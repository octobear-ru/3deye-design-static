.app-cover.app-cover--plans
  = partial 'elements/app_nav'
  .app-cover__content
    .container.text-center
      h1.app-cover__content-title
        - if target? :squarespace
          squarespace:block-field id="app-cover__content-title" columns="12" lock-layout="true"
            | {app-cover__content-title}
        - else
          | Select your VSaaS plan
      h2.app-cover__content-subtitle
        - if target? :squarespace
          squarespace:block-field id="app-cover__content-subtitle" columns="12" lock-layout="true"
            | {app-cover__content-subtitle}
        - else
          | Pick a value plan that works for your Company
.cards__container.cards__container--primary
  .container
    .row
      - if target? :squarespace
        = partial 'collections/plan_list'
      - else
        - data.plans.static.each do |p|
          = partial 'collections/plan_item', locals: {p: p}
.form__container.form__container--gray-lightest
  .container
    .row
      .col-md-4.col-md-offset-4
        .content-block-horizontal
          .content-block-sm.text-color-gray-dark
            | Share your email address and we'll
            br
            | get in touch to help you choose
          .input-group.input-group--plain
            input.form-control type="email" placeholder="Your email"
            .input-group-btn
              button class="btn btn-link btn-link--blue-light btn-wide"
                | Send

= partial 'elements/footer'
